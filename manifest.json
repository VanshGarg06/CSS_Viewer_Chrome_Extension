{
    "manifest_version": 3,
    "name": "CSS Viewer",
    "version": "1.0",
    "description": "View CSS styles of elements by hovering",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
    }
  }
  